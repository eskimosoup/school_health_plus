<%= form_for([:admin, @page]) do |f| %>

  <%= f.error_messages %>
  
  <%= field_set_tag 'Page Layout' do -%>
    <div class="field">
      <%= f.label :layout %><br />
      <%= f.select :layout, Page.layouts.map{ |x| [t(x), x] } %>
    </div>
    
    <div class="field">
      <%= f.label :style %><br />
      <%= f.select :style, Page.styles.map{ |x| [t(x), x] } %>
    </div>
  <% end -%>

  <fieldset>
    <legend>Main Content</legend>
    
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>
    
    <div class="field">
      <%= f.label :summary %><br />
      <%= f.text_area :summary %>
    </div>
    
    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content, :class => "tinymce" %>
    </div>
  </fieldset>
  
  <fieldset>
    <legend>Image</legend>
  
    <div class="field">
      <%= f.image_field :image %>
    </div>
    
    <div class="field">
      <%= f.label :image_alt %><br />
      <%= f.text_field :image_alt %>
    </div>
  </fieldset>
  
  <fieldset>
    <legend class="clickable" onclick="this.text = $('#seo').is(':visible') ? 'show' : 'hide'; $('#seo').slideToggle()">SEO</legend>
    <div id="seo" style="display:none;">
      <div class="field">
        <%= f.label :meta_description %><br />
        <%= f.text_area :meta_description %>
      </div>
      
      <div class="field">
        <%= f.label :meta_tags %><br />
        <%= f.text_area :meta_tags %>
      </div>
    </div>    
  </fieldset>
  
  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>
